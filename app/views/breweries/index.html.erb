<h1 id="breweries">Breweries</h1>

<%= link_to 'New Brewery', new_brewery_path, :id => "new_brew" %>

<table class="breweries_table">
  <thead>
    <tr>
      <th class="breweries_table">Name</th>
      <th class="breweries_table">Address</th>
      <th class="breweries_table">Website</th>
      <th class="breweries_table">Hours</th>
      <th class="breweries_table">Phone</th>
      <th class="breweries_table">Description</th>
      <th class="breweries_table">Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%= brewery.address %></td>
        <td><%= brewery.website %></td>
        <td><%= brewery.hours %></td>
        <td><%= brewery.phone_number %></td>
        <td><%= brewery.description %></td>
        <td><%= brewery.rating %></td>
        <td><%= link_to 'Show', brewery %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
