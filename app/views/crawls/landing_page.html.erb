
<% if cookies[:accepted].blank? %>
  <div id="myModal" class="modal">

    <div class="modal-content">
      <i class="fa fa-beer fa-5x" aria-hidden="true"></i>
      <p>Are you 21 or over?</p>
      <div class="row">
        <div class="col-md-2 col-md-offset-4">
          <input type="button" onclick="location.href='https://www.youtube.com/watch?v=6-HUgzYPm9g';" value="NO">
        </div>
        <div class="col-md-2">
          <form action="/crawls/age_verified" method="GET">
            <input id="yesButton" type="submit" name="accepted" value="YES!">
          </form>
        </div>
      </div>
    </div>
  <!-- link_to "I accept", :controller => 'welcome', :action => 'accept_and_redirect' -->
  </div>
<%end%>


<div class="row">
  <div class="col-md-12">

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Hoppy Crawl <i class="fa fa-beer" aria-hidden="true"></i></a>

        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav"></ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> </li>
            <% else %>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <li><%= link_to 'Log In', new_user_session_path %></li>
              <%if can? :manage, :all %>
              <li><%= link_to 'Breweries', breweries_path%></li>
              <li><%= link_to 'Crawls', crawls_path %></li>
              <%end%>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</div>
<p id="notice"><%= notice %></p>
<br>
<div class="row" id="hoptoit">
  <div class="col-md-12">
    <h3>HOP TO IT!</h3>
    <%= form_tag("/crawls/create") do %>
      <%= text_field_tag 'address', nil, placeholder: "Enter Zip Code" %>
      <%= submit_tag 'Crawl' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="three-p">

      <!-- <img src="#"> --><i class="fa fa-map-marker fa-5x" aria-hidden="true"></i>
      <h4>plot</h4>
      <p>Bring the adventure right to your fingertips. Randomly generate a beer crawl regardless of your location!  </p>
    </div>
  </div>
  <div class="col-md-4">
    <div class="three-p">
      <!-- <img src="#"> --><i class="fa fa-calendar fa-5x" aria-hidden="true"></i>

      <h4>plan</h4>
      <p>Edit, share, and rate your favorite crawls with your friends! Keep in touch with your favorite breweries, and keep up to date on all new beer releases!</p>
    </div>
  </div>
  <div class="col-md-4">
    <div class="three-p">
      <!-- <img src="#"> --> <i class="fa fa-users fa-5x" aria-hidden="true"></i>
      <h4>party</h4>
      <p>Hop to it and get your crawl on! Grab your best friends, get out, and explore your city the beer way. </p>
    </div>
  </div>
</div>
