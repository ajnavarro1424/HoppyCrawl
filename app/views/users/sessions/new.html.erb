<!-- want reset_password notice here -->
<div class="login_page">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login_field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :class => "fields" %>
    </div>

    <br>

    <div class="login_field2">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", :class => "fields" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="login">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="login_actions">
      <%= f.submit "Log In", :id => 'login_button' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
